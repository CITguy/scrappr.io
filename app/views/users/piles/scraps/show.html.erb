<div class="col-md-2">
    <%= link_to edit_user_pile_scrap_path(@user, @pile, @scrap), class: "btn btn-default btn-block" do %>
      <span class="fa fa-pencil"></span> Edit
    <% end %>
    <%= link_to user_pile_scrap_path(@user, @pile, @scrap), method: :delete, class: "btn btn-danger btn-block" do %>
      <span class="fa fa-trash-o"></span> Destroy
    <% end %>
</div>
<div class="col-md-10">
  <div class="panel panel-info">
    <div class="panel-heading">
      <h3 class="panel-title">Scrap Details</h3>
    </div>
    <div class="panel-body">
      <div class="row">
        <div class="col-md-6 text-left">
          <%= method_label(@scrap.http_method) %>
          <%= [
            root_url.gsub(/\/$/, ''),
            "api",
            @user.username,
            @pile.to_param,
            @scrap.endpoint
          ].join('/') %>
        </div>
        <div class="col-md-6 text-right">
          <%= status_label(@scrap.status_code) %>
          <span class="badge"><%= @scrap.content_type %></span>
        </div>
      </div>
    </div>
    <!-- TODO
    <table class="table table-condensed table-striped">
      <thead>
        <tr>
          <th class="col-md-3">Header</th>
          <th class="col-md-9">Value</th>
        </tr>
      </thead>
    </table>
    -->
    <div class="scrap-viewer-container" id="scrap_viewer_<%= @scrap.id %>"><%= @scrap.body %></div>
  </div>
</div>
